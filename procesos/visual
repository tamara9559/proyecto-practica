# visualizar_datos.py
import matplotlib.pyplot as plt
import seaborn as sns

def generar_graficos(df):
    """Genera gráficos básicos para visualizar los datos."""
    if df is not None:
        plt.figure(figsize=(10, 5))
        sns.histplot(df.iloc[:, 1], kde=True)  # Suponiendo que la segunda columna es numérica
        plt.title("Distribución de datos")
        plt.show()